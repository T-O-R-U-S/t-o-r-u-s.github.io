---
import '../styles/global.scss'

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="description" content="The portfolio page for Mahmoud Moursy (T-O-R-U-S)">
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>

	<body>
		<slot />
		<footer>
			<h5>Made with <a href="https://astro.build" rel="sponsored">Astro</a></h5>
		</footer>
	</body>
</html>
